@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model IEnumerable<Vidly.Models.Movie>
@{
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>
<div>
    <p>
        @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
    </p>
</div>
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @*Because we are using the api to render the table, no need to render the customers from the server
            thats whay we delete the foreach block**@
    </tbody>
</table>
@section scripts
{

    <script>
        $(document).ready(function() {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "movie",
                        render: function (data, type, movie) {
                            return "<a href=/movies/edit/" + movie.id + ">" + movie.name + "</a>";
                        }
                    },
                    {
                        data:"genre.name"
                    },
                    {
                        data: "id",
                        render: function (data, type, movie) {
                            return "<button class='btn btn-link js-delete' data-movie-id=" + data +" >Delete"+"</button>";
                        }
                    }
                ]
            });


            $("#movies").on("click",
                ".js-delete",
                function() {

                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this customer?",
                        function(result) {

                            if (result) {
                                $.ajax({
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function() {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });

                });
        });
    </script>
}