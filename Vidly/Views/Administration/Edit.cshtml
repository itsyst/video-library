
@model Vidly.ViewModel.RoleFormViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h1>Edit Role</h1>

<form method="post" class="border-0 border-primary box-shadow  mt-3">
    <div class="form-group">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control">
            <span asp-validaton-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-info" asp-action="Edit" asp-controller="Administration">Update</button>
            <a class = "btn btn-danger" asp-action="Roles">Cancel</a>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h3>Users in this Role</h3>
        </div>
        <div class="card-body"></div>
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <h5 class="card-title ml-3">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title ml-3">None at the moment</h5>

        }
        <div class="card-footer">
            <a class="btn btn-primary">Add Users</a>
            <a class="btn btn-danger">Remove Users</a>
        </div>

    </div>

</form>